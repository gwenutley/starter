<h1><%= title %></h1>

<% if (message) { %>
    <div class="flash-message">
        <%= message %>
    </div>
<% } %>

<% if (errors && errors.length> 0) { %>
    <ul class="notice">
        <% errors.forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
<% } %>

<div class="add-class-form">
    <form action="/inv/add-classification" method="POST" class="add-class-form">
        <label for="classification_name">Classification Name</label>
        <input type="text" id="classification_name" name="classification_name" value="<%= typeof classification_name !=='undefined' ? classification_name : '' %>" title="No spaces or special characters" pattern="^[A-Za-z0-9]+$" required>
        <p>No spaces or special characters allowed</p>
        
        <button type="submit">Add Classification</button>
    </form>
</div>
